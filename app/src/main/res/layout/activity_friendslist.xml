<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView_friends_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#1d8fa3"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textView_friends_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend's Place"
        android:textColor="#70415e"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView_friends_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend's Job"
        android:textColor="#301526"
        android:textSize="15dp"/>

</LinearLayout>